{
	"name": "testbed-dotnet",
	"private": "true",
	"publisher": "ms-vscode",
	"version": "0.0.1",
	"description": ".NET WASI Example",
	"author": "MS",
	"license": "MIT",
	"engines": {
		"vscode": "^1.67.0"
	},
	"main": "./out/extension.js",
	"activationEvents": [
		"*"
	],
	"contributes": {
		"commands": [
			{
				"command": "testbed-dotnet.run",
				"category": "wasm",
				"title": "Run .NET WASI Program"
			}
		]
	},
	"scripts": {
		"clean": "node ./node_modules/rimraf/bin.js out ../dotnet-wasi-hello/bin ../dotnet-wasi-hello/obj",
		"compile:ts": "node ./node_modules/typescript/lib/tsc.js -b tsconfig.json",
		"watch:ts": "node ./node_modules/typescript/lib/tsc.js -b tsconfig.json -w",
		"build": "npm run compile:ts && npm run build:dotnet",
		"build:dotnet": "./node_modules/.bin/make-dir ./out && dotnet publish -c Release ../dotnet-wasi-hello/dotnet-wasi-hello.csproj -bl -p:ExampleWasmPublishPath=$PWD/out"
	},
    	"dependencies": {
		"vscode-uri": "^3.0.3",
		"@vscode/wasm-wasi": "^0.13.0-pre.1"
	},
	"devDependencies": {
		"@types/vscode": "^1.71.0",
		"@types/assert": "^1.5.6",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^5.35.1",
		"@typescript-eslint/parser": "^5.35.1",
		"esbuild": "^0.17.14",
		"eslint": "^8.22.0",
		"http-server": "^14.1.1",
		"make-dir-cli": "^3.0.0",
		"@types/mocha": "^9.1.1",
		"mocha": "^10.0.0",
		"node-polyfill-webpack-plugin": "^2.0.1",
		"playwright": "^1.33.0",
		"rimraf": "^3.0.2",
		"shelljs": "^0.8.5",
		"shx": "^0.3.4",
		"@vscode/tsconfig-gen": "0.1.0",
		"typescript": "^5.0.4",
		"serve": "^14.2.0",
		"@types/path-browserify": "^1.0.0",
		"path-browserify": "^1.0.1",
		"@vscode/test-electron": "^2.3.0",
		"@vscode/test-web": "^0.0.43",
		"@types/glob": "^8.1.0",
		"glob": "^9.3.1"
	}
}
